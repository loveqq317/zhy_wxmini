.project_wrap {
  display: flex;
  flex-wrap: wrap;
}
.project_wrap .project_item {
  width: 100%;
  margin: 20rpx;
  background-color: #F2F2F2;
}
.project_wrap .project_item .project_title {
  font-size: 16px;
  padding-left: 20rpx;
  background-color: #F2F2F2;
  height: 80rpx;
  line-height: 80rpx;
  color: #000;
}
.project_wrap .project_item .project_img {
  width: 96%;
  margin: 0 auto;
}
.project_wrap .project_item .project_info {
  background-color: #F2F2F2;
  color: #666;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}
